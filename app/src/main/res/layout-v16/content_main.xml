<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.br.adminestabelecimento.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtadmin"
        android:fontFamily="cursive"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#1f50e3"
        android:layout_marginTop="18dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_cad_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_cadastro_categoria"
        android:background="@drawable/press_login"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btnarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_cadastro_area"
        android:background="@drawable/press_login"
        android:layout_below="@+id/btn_cad_categoria"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />





    <Button
        android:id="@+id/btn_lista_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listar_pedidos"
        android:textSize="20sp"
        android:background="@drawable/press_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="103dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






</RelativeLayout>
